rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@achadoseperdidos.com' ||
        request.auth.token.email == 'adriana@achadoseperdidos.com'
        // Adicione mais emails de admin aqui
      );
    }
    
    // Regras para a coleção de itens
    match /itens/{itemId} {
      // Qualquer pessoa pode ler (visualizar) itens
      allow read: if true;
      
      // Apenas usuários autenticados e que sejam admins podem criar itens
      allow create: if isAdmin();
      
      // Apenas admins podem atualizar itens (marcar como recuperado)
      allow update: if isAdmin();
      
      // Apenas admins podem deletar itens
      allow delete: if isAdmin();
    }
    
    // Regras para outras coleções (se houver)
    // match /usuarios/{userId} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth.uid == userId;
    // }
  }
}
