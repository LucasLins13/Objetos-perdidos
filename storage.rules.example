rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Função auxiliar para verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@achadoseperdidos.com' ||
        request.auth.token.email == 'adriana@achadoseperdidos.com'
        // Adicione mais emails de admin aqui
      );
    }
    
    // Regras para imagens
    match /images/{imageId} {
      // Qualquer pessoa pode ler (visualizar) imagens
      allow read: if true;
      
      // Apenas admins autenticados podem fazer upload de imagens
      allow write: if isAdmin();
      
      // Validações adicionais de upload
      allow create: if isAdmin() 
        && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
        && request.resource.contentType.matches('image/.*');  // Apenas imagens
    }
  }
}
